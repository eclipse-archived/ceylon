<?xml version="1.0" encoding="UTF-8"?>
<!--
    Sample Ceylon build script using Ant.
-->
<project name="project" default="default">
	
	<property name="ceylon.home" value="../.."/>
    <property name="ceylon.ant.lib" value="${ceylon.home}/repo/com/redhat/ceylon/ant/0.5/com.redhat.ceylon.ant-0.5.jar"/>
	
	<target name="ceylon-ant-taskdefs">
	  <path id="ant-tasks">
	    <pathelement location="${ceylon.ant.lib}"/>
	  </path>
      <typedef resource="com/redhat/ceylon/ant/antlib.xml" classpathref="ant-tasks"/>
	</target>
	
    <target name="default" depends="doc, run">
    </target>

    <target name="compile" depends="ceylon-ant-taskdefs">
    	<ceylon-compile>
    		<module name="com.example.interop"/>
    	</ceylon-compile>
    </target>

    <target name="doc" depends="compile">
        <ceylon-doc>
            <module name="com.example.interop"/>
        </ceylon-doc>
    </target>

    <target name="run" depends="compile">
        <ceylon-run module="com.example.interop/1.0.0"/>
    </target>

	<target name="clean">
    	<delete dir="modules"/>
    </target>

</project>
